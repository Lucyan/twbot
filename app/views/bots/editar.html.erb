<% provide(:title, 'Editar') %>
<div class="center hero-unit">
  	<h1>Editar Bot</h1>
	<%= render "layouts/menu" %>
  	<h2>Cuenta vinculada: <%= link_to "@"+@bot.tw_cuenta, "http://twitter.com/"+@bot.tw_cuenta %></h2>
  	<div class="form_puntos origen">
		<%= form_for @bot, :url => bot_editar_path(@bot) do |form| %>
			<fieldset class="fields">
				<div class="field control-group">
					<%= form.label :nombre %>
					<%= form.text_field :nombre %>
				</div>

				<div class="field control-group">
					<%= form.label :cantidad_seguir, "Máximo a seguir por hora" %>
					<div class="input-prepend">
						<%= form.text_field :cantidad_seguir %>
					</div>
				</div>

				<div class="field control-group">
					<%= form.label :verificar_seguido, "Verificar seguidos despues de" %>
					<div class="input-prepend">
						<%= form.text_field :verificar_seguido, {class: "span1"} %><span class="add-on">Dias</span>
					</div>
				</div>

				<% if (@bot.plus == true) %>
					<div class="field control-group">
						<%= form.label :frase_al_seguir, "Frase de respuesta cuando el Bot sigue a una persona" %>
						<div class="input-prepend">
							<%= form.text_field :frase_al_seguir %>
						</div>
					</div>

					<div class="field control-group">
						<%= form.label :frase_cuando_siguen, "Frase de respuesta cuando una persona sigue al Bot" %>
						<div class="input-prepend">
							<%= form.text_field :frase_cuando_siguen %>
						</div>
					</div>
				<% end %>

				<div class="field control-group">
					Última Renovación
					<div class="input-prepend">
						<%= @bot.fecha_renovacion.strftime("%d/%m/%Y") %>
					</div>
				</div>
			</fieldset>
			<br />
			<fieldset class="actions">
				<%= form.submit "Guardar", class: "btn btn-large btn-primary" %>
			</fieldset>
		<% end %>
	</div>
</div>