<% provide(:title, "Palabras") %>
<div class="center hero-unit">
  	<h1>Palabras Followkeyword <%= @bot.nombre %></h1>
	<%= render "layouts/menu" %>
	<% if flash[:notice] %>
      	<p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <%= link_to "Agregar Palabra", bot_agregar_palabra_path(@bot), class: "btn btn-large btn-primary" %>
    <table class="palabrastabla">
    	<tr>
    		<th>Palabra</th>
            <% if (@bot.plus == true) %>
                <th>Frase</th>
            <% end %>
    		<th>Acciones</th>
    	</tr>
		<% if @bot.palabras.count == 0 %>
			<tr><td colspan="3"> AÃºn no hay ninguna palabra asociada al Followkeyword</td></tr>
		<% else %>
    	<% @bot.palabras.each do |palabra| %>
	    	<tr>
	    		<td><%= palabra.palabra %></td>
                <% if (@bot.plus == true) %>
                    <td><%= palabra.frase %></td>
                <% end %>
	    		<td>
	    			<div class="btn-toolbar">
                        <div class="btn-group">
                            <%= link_to "Eliminar", bot_eliminar_palabra_path(@bot, palabra), class: "btn" %>
                        </div>
                    </div>
	    		</td>
	    	</tr>
		<% end %> 
	    <% end %>
    </table>
</div>