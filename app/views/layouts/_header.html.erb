  <div class="navbar-inner">
    <div class="container">
      <%= link_to NOMBRE_APP, root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if session[:login] %>
            <% user = User.find(session[:login]); %>
            <% if user.perfil == 1 %>
              <li><%= link_to "Administrar Usuario",    usuarios_path %></li>
              <li><%= link_to "Ciudades",    ciudades_path %></li>
            <% end %>
            <li><%= link_to "Listado Bots",    root_path %></li>
            <li><%= link_to "Agregar Bot",    bot_nuevo_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>